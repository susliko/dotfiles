# i3 config file (v4)
# Please see https://i3wm.org/docs/userguide.html for a complete reference!
set $mod Mod4

set $script_dir ~/.config/i3/scripts

font pango:monospace 10

exec --no-startup-id nm-applet

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Change first sound input to 0/1 output options
set $detect_sinks pacmd set-default-sink 0 && pacmd move-sink-input 0 
bindsym $mod+Mod1+0 exec --no-startup-id $detect_sinks && pacmd set-default-sink 0 && pacmd move-sink-input 0 0
bindsym $mod+Mod1+1 exec --no-startup-id $detect_sinks && pacmd set-default-sink 1 && pacmd move-sink-input 0 1
bindsym $mod+Mod1+2 exec --no-startup-id $detect_sinks && pacmd set-default-sink 2 && pacmd move-sink-input 0 2
bindsym $mod+Mod1+3 exec --no-startup-id $detect_sinks && pacmd set-default-sink 3 && pacmd move-sink-input 0 3
bindsym $mod+Mod1+4 exec --no-startup-id $detect_sinks && pacmd set-default-sink 4 && pacmd move-sink-input 0 4
bindsym $mod+Mod1+5 exec --no-startup-id $detect_sinks && pacmd set-default-sink 5 && pacmd move-sink-input 0 5
bindsym $mod+Mod1+6 exec --no-startup-id $detect_sinks && pacmd set-default-sink 6 && pacmd move-sink-input 0 6
bindsym $mod+Mod1+7 exec --no-startup-id $detect_sinks && pacmd set-default-sink 7 && pacmd move-sink-input 0 7

# Use Mouse+$mod to drag floating windows to their wanted position
